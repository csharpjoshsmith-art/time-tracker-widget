{
  "name": "time-tracker-widget",
  "version": "1.0.0",
  "description": "Desktop time tracking widget with Jira integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "kill": "taskkill /F /IM electron.exe || echo No Electron processes to kill",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild",
    "build-win": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-all": "electron-builder --win --mac"
  },
  "keywords": [
    "time-tracker",
    "jira",
    "productivity"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "better-sqlite3": "^12.4.1",
    "electron": "^38.2.2",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "active-win": "^8.2.1",
    "axios": "^1.6.0",
    "electron-store": "^8.2.0",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.yourcompany.timetracker",
    "productName": "Time Tracker",
    "directories": {
      "output": "D:/My_Projects_Repos/time-tracker-builds"
    },
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "files": [
      "**/*",
      "!node_modules/better-sqlite3/build/Release/better_sqlite3.node"
    ],
    "extraResources": [
      {
        "from": "node_modules/better-sqlite3/build/Release",
        "to": "better-sqlite3",
        "filter": [
          "*.node"
        ]
      }
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "forceCodeSigning": false
  }
}
